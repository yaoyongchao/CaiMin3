<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WidthHeightMW"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_top_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_default"
        android:background="@color/colorBorder"
        />

    <LinearLayout
        style="@style/Layout_switch"
        >

        <TextView
            android:id="@+id/tv_set_value"
            style="@style/WidthHeightWW"
            android:text="11"
            android:layout_weight="1"
            />
        <Switch
            android:id="@+id/myswitch"
            style="@style/SwitchSetting"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_default"
        android:background="@color/colorBorder"
        android:layout_marginLeft="@dimen/margin_default"
        />

</LinearLayout>